<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:colorpicker="http://schemas.android.com/apk/res-auto">
    <android.support.v7.preference.PreferenceCategory
        android:title="Routine">
        <Preference
            android:key="dept_preference"
            android:summary="Place holder summary"
            android:title="Choose Your Department" />
        <Preference
            android:key="routine_preference"
            android:summary="Place holder summary"
            android:title="Choose Your Routine" />
        <Preference
            android:key="reset_preference"
            android:summary="Clears saved, added, edited, deleted classes"
            android:title="Reset Your Routine" />
        <SwitchPreferenceCompat
            android:key="limit_preference"
            android:summary="Place holder"
            android:title="Limit Modified Classes"
            android:defaultValue="true" />
    </android.support.v7.preference.PreferenceCategory>
    <android.support.v7.preference.PreferenceCategory
        android:title="Appearance">
        <org.polaric.colorful.ColorPickerPreference
            android:title="Choose Primary Color"
            android:summary="Changes background, course code header etc. color"
            colorpicker:primary_color="true"
            android:key="primary"/>
        <org.polaric.colorful.ColorPickerPreference
            android:title="Choose Accent"
            android:summary="Changes tab indicator color, text input's title color"
            colorpicker:accent_color="true"
            android:key="accent"/>
    </android.support.v7.preference.PreferenceCategory>
    <android.support.v7.preference.PreferenceCategory android:title="About">
        <Preference
            android:key="version_preference"
            android:summary="X"
            android:title="Current Version" />
        <Preference
            android:key="developer_preference"
            android:title="Developed by"
            android:summary="Mushfiqus Salehin">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://mushfiqussalehin.me" />
        </Preference>
        <Preference
            android:key="icon_preference"
            android:summary="Raisul Haque Rajon"
            android:title="Icon Design by" />

    </android.support.v7.preference.PreferenceCategory>
</android.support.v7.preference.PreferenceScreen>